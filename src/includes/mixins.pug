mixin marker
  i.marker.pe-7s-check

mixin alternate_description
    .hover-description
            .description-content
            h3 Lorem ipsum
        .hr
        p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quod.
        .item-pic: img(src= 'i/'+img, class!= attributes.class)

mixin alternate_description2
    .scale-description
        .scale-content
            i.lens.pe-7s-search

mixin portfolio_item(category, img, name, description, link, color)
    .grid-item(class= category)
        a.item-cont(href= link target='_blank')
            .alt-description
                .alt-content
                    h3= name
                    p= description
                    .underline(class= color)
                    i.view.pe-7s-search
            .item-pic: img(src= 'i/min/'+img, class!= attributes.class)
            if block
                 block