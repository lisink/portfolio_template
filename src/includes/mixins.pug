mixin marker
  i.marker.pe-7s-check

mixin portfolio_item(category, img, name, description, link, color)
    .grid-item(class= category)
        a.item-cont(href= link target='_blank')
            .alt-description
                .alt-content
                    h3= name
                    p= description
                    .underline(class= color)
                    i.view.pe-7s-search
            .item-pic: img(src= 'i/min/'+img, class!= attributes.class)
            if block
                 block